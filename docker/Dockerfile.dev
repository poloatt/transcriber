FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    python3-dev \
    libasound2-dev \
    portaudio19-dev \
    libportaudio2 \
    libportaudiocpp0 \
    pulseaudio \
    pulseaudio-utils \
    alsa-utils \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Add ffmpeg for audio processing
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Add audio group and configure user with sudo
RUN getent group audio || groupadd -r audio && \
    useradd -r -g audio appuser && \
    mkdir -p /home/appuser && \
    chown -R appuser:audio /home/appuser /app && \
    usermod -a -G audio,root appuser && \
    echo "appuser ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Configure audio permissions
RUN mkdir -p /run/user/1000/pulse /dev/snd && \
    chown -R appuser:audio /run/user/1000/pulse /dev/snd && \
    chmod -R 777 /dev/snd && \
    mkdir -p /etc/pulse && \
    chown -R appuser:audio /etc/pulse

# Set proper capabilities
RUN apt-get update && apt-get install -y libcap2-bin && \
    setcap cap_sys_nice+ep /usr/bin/pulseaudio && \
    setcap cap_sys_nice+ep /usr/bin/python3.9

# Configure ALSA
RUN echo 'pcm.!default {\n type pulse\n}\nctl.!default {\n type pulse\n}' > /etc/asound.conf

# Configure PulseAudio
RUN echo 'load-module module-native-protocol-unix auth-anonymous=1 socket=/mnt/wslg/PulseServer' > /etc/pulse/default.pa

# Configure audio
COPY pulse-client.conf /etc/pulse/client.conf
RUN mkdir -p /etc/pulse && \
    chown -R appuser:audio /etc/pulse && \
    chmod 755 /etc/pulse && \
    chmod 644 /etc/pulse/client.conf

USER appuser

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Explicitly expose the port
EXPOSE 5002

# Remove the existing COPY commands for app and config
# Since we'll use volumes instead
RUN mkdir -p /app/static

# Environment variables
ENV PYTHONPATH=/app \
    FLASK_APP=app/__init__.py \
    FLASK_ENV=development \
    PORT=5002

# Update CMD to use the development server with debug mode
CMD ["python", "-m", "flask", "--app", "app", "run", "--host=0.0.0.0", "--port=5002", "--debug"]